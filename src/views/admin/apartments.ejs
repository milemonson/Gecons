<!DOCTYPE html>
<html lang="es">

<%- include("../partials/head", { title : "Dashboard - Departamentos" }) %>

<body>
    
    <div class="container" id="container">

        <%- include("../partials/tabs", { active : 2 }) %>

        <div class="form-row">
            <div class="form-group col-6 justify-content-center">
                <select class="form-control" id="building-select">
                    <% if(locals.building) { %>
                        <option value="<%= building.id %>" selected>
                            <%= building.name %>
                        </option>
                    <% } else { %>
                        <option value="">
                            -- Seleccionar edificio --
                        </option>
                    <% } %>
                    <!-- Construido desde el script -->
                </select>
            </div>
            <% if(locals.admin) { %>
                <div class="form-group col-6 justify-content-center">
                    <button type="button" class="btn btn-primary" id="add-apartment">
                        + Añadir depto
                    </button>
                </div>
            <% } %>
        </div>

        <table class="table table-striped">
            <thead class="thead-dark">
                <tr class="text-center">
                  <th scope="col">Depto</th>
                  <th scope="col">Fechas</th>
                  <th scope="col">Monto</th>
                  <th scope="col">Ver</th>
                </tr>
            </thead>
            <tbody id="table-body"></tbody> <!-- Construido desde el script -->
        </table>

        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center" id="pagination"></ul><!-- Construido desde el script -->
        </nav>

    </div>
    <style>
        /* Animación del spinner */
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
    <script src="/js/apartments.js"></script>

</body>
</html>