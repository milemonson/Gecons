<!DOCTYPE html>
<html lang="es">

    <%- include("../partials/head", { title : `Dashboard - ${apartment.name} en ${apartment.Building.name}` }) %>

<body>

    <div class="container">

        <%- include("../partials/tabs", { active : 2 }) %>

        <h2><%= apartment.name %>, en <%= apartment.Building.name %></h2>
        <% if(locals.apartment.description) { %>
            <p class="border rounded border-secondary px-3 py-2">
                <%= apartment.description %>
            </p>
        <% } %>

        <!-- Fechas de inicio y fin -->
        <div class="d-flex justify-content-around">
            <div class="d-flex flex-column d-inline-block">
                <h3 class="h6">Fecha de inicio:</h3>
                <span class="d-block text-center">
                    <%= new Date(apartment.initDate).toLocaleDateString("es-AR", { timeZone : "UTC" }) %>
                </span>
            </div>
            <div class="d-flex flex-column d-inline-block">
                <h3 class="h6">Fecha de fin:</h3>
                <span class="d-block text-center">
                    <%= new Date(apartment.endDate).toLocaleDateString("es-AR", { timeZone : "UTC" }) %>
                </span>
            </div>
        </div>

        <!-- Precio -->
        <div class="form-row input-group mb-3">
            <div class="input-group-append">
                <span class="input-group-text">Monto:</span>
            </div>
            <input type="text" class="form-control bg-white" readonly value="$<%= apartment.price %>">
        </div>

        <!-- Descargar documento -->
        <% if(apartment.documentUrl) { %>
            <div class="form-row input-group mt-3 mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="download-document">
                        <a href="/admin/apartments/download/<%= apartment.documentUrl %>">
                            <i class="fas fa-download"></i>
                        </a>
                    </span>
                </div>
                <input type="text" class="form-control bg-white" readonly value="Descargar documento de texto">
            </div>
        <% } %>

        <!-- Imágenes -->
        <% if(apartment.Images.length){ %>
            <label for="carouselExampleControls">Imágenes subidas:</label>
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <% apartment.Images.map((img, index) => { %>
                        <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
                            <img src="/img/uploaded/<%= img.url %>" 
                                class="d-block w-100" alt="Imagen ilustrativa del departamento">
                          </div>
                    <% }); %>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
        <% } %>

        <!-- Botones de edición/borrado -->
        <% if(locals.admin) { %>
            <form class="d-flex justify-content-around" method="POST" 
                action="/admin/apartments/delete/<%= apartment.id %>?_method=DELETE">
                <a class="btn btn-primary" href="/admin/apartments/<%= apartment.id %>/edit">Editar</a>
                <button class="btn btn-primary" type="submit">Borrar</button>
            </form>
        <% } %>

    </div>

    <!-- JS de Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>

</body>

</html>