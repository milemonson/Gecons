<!DOCTYPE html>
<html lang="es">

<%- include("../partials/head", { title : "Dashboard - Edificios" }) %>

<body>
    <div class="container" id="container">

        <%- include("../partials/tabs", { active : 0 }) %>

        <!-- Filtrado de elementos -->
        <div class="form-row align-items-center w-100">
            <div class="col">
                <div class="input-group mb-2">
                    <div class="input-group-prepend" id="search-button">
                        <div class="input-group-text">
                            <i class="fas fa-search"></i>
                        </div>
                    </div>
                    <input type="text" class="form-control" id="filter" placeholder="Buscar...">
                </div>
            </div>
        </div>

        <!-- Tabla de edificios -->
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                  <th scope="col">Edificio</th>
                  <th scope="col">Deptos</th>
                  <th scope="col">Editar</th>
                  <th scope="col">Borrar</th>
                </tr>
            </thead>
            <tbody id="table-body"></tbody> <!-- Construido desde el script -->
        </table>

        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center" id="pagination"></ul><!-- Construido desde el script -->
        </nav>

    </div>
    <style>
        /* Animaci√≥n del spinner */
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
    <script src="/js/buildings.js"></script>
</body>

</html>